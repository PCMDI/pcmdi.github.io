                        {
                            $citation .= 'Accepted. ';
                        }
                        else if ($pub['status'] == 'in_press')
                        {
                            $citation .= 'In press. ';
                        }

                        $citation .= '<a href="abstract.php?ipcc_publication_id=' . $pub['ipcc_publication_id'] . '">Abstract</a>. ';

                        if ($pub['url'] != '')
                        {
